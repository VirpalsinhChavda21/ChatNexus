<!-- res/drawable/border_imageview.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/borderColor" /> <!-- Set the border color -->
        </shape>
    </item>

    <!-- Inset drawable for the image -->
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <bitmap android:src="@drawable/add_a_photo" />
    </item>

</layer-list>
